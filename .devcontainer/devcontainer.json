{
  "name": "MySQL Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  // Eliminamos el mount manual y los comandos de chown/usermod innecesarios
  // La Feature de docker-in-docker ya gestiona los permisos del grupo 'docker'
  "remoteUser": "vscode",
  "forwardPorts": [3306],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-mysql"
      ]
    }
  }
}



